<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_border_grey"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="----"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />
    <LinearLayout
        android:id="@+id/ll_route"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/ic_location_blue"
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            />
        <TextView
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/ic_location_yellow"
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            />
    </LinearLayout>


    <TextView
        android:textSize="17sp"
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="---" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/ll_route"
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        />
    <TextView
        android:textColor="@color/tool_bar_color"
        android:layout_marginRight="12dp"
        android:id="@+id/tv_ordertype"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/ll_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_alignParentRight="true" />
</RelativeLayout>