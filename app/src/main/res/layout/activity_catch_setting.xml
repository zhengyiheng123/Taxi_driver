<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="8dp"
        android:layout_margin="16dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_setting_white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:textColor="@color/material_black"
            android:textSize="17sp"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单偏好"
            />
<RadioGroup
    android:id="@+id/rb_preference"
    android:padding="2dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/shape_empty_setting_type"
    >
    <RadioButton
        android:checked="true"
        android:id="@+id/rb_intime"
        android:textColor="@drawable/fragment_dialog_empty_setting_text"
        android:button="@null"
        android:textSize="16sp"
        android:gravity="center"
        android:text="实时"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_empty_item"
        />
    <RadioButton
        android:id="@+id/rb_order"
        android:textColor="@drawable/fragment_dialog_empty_setting_text"
        android:button="@null"
        android:textSize="16sp"
        android:gravity="center"
        android:text="预约"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_empty_item"
        />
    <RadioButton
        android:id="@+id/rb_all"
        android:textColor="@drawable/fragment_dialog_empty_setting_text"
        android:button="@null"
        android:textSize="16sp"
        android:gravity="center"
        android:text="全部"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_empty_item"
        />
</RadioGroup>
    <LinearLayout
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />
        <TextView
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时听单设置"
            />
        <View
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />
    </LinearLayout>
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:textColor="@color/material_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="听单范围（公里）"
                />

            <RadioButton
                android:checked="false"
                android:id="@+id/cb_automode"
                android:gravity="center"
                android:background="@drawable/seletor_setting_auto"
                android:textColor="@drawable/selector_auto"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:button="@null"
                android:text="自动模式"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RadioGroup
            android:id="@+id/rg_distance"
            android:padding="2dp"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_empty_setting_type"
            >
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_1"
                android:textColor="@drawable/fragment_dialog_empty_setting_text"
                android:button="@null"
                android:textSize="16sp"
                android:gravity="center"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_empty_item"
                />
            <RadioButton
                android:id="@+id/rb_2"
                android:textColor="@drawable/fragment_dialog_empty_setting_text"
                android:button="@null"
                android:textSize="16sp"
                android:gravity="center"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_empty_item"
                />
            <RadioButton
                android:id="@+id/rb_3"
                android:textColor="@drawable/fragment_dialog_empty_setting_text"
                android:button="@null"
                android:textSize="16sp"
                android:gravity="center"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_empty_item"
                />
            <RadioButton
                android:id="@+id/rb_5"
                android:textColor="@drawable/fragment_dialog_empty_setting_text"
                android:button="@null"
                android:textSize="16sp"
                android:gravity="center"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_empty_item"
                />
        </RadioGroup>
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:textColor="@color/material_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只听收车单"
                />
            <cinyida.com.car_driver.widget.CheckSwitchButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/check_home"
                />
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                />
            <TextView
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约听单设置"
                />
            <View
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                />
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:textColor="@color/material_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只听收车预约单"
                />
            <cinyida.com.car_driver.widget.CheckSwitchButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/tv_check_order"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:elevation="1dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        android:id="@+id/tv_setting"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/ic_order_setting"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成设置"
        />
</FrameLayout>