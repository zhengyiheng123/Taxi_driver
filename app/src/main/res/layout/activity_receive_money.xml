<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputHeight">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:text="车费："
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:hint="计价器计价金额"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/material_red_500"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:text="元"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputHeight">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:text="车费："
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/material_red_500"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:text="元"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_myweixin"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="310.5dp"
        android:layout_height="426dp"
        />
    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_login"
        android:text="已现金或扫码收款"
        android:textSize="16sp"
        android:id="@+id/btn_login"
        android:textColor="@color/white"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight" />
</LinearLayout>