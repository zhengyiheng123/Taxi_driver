<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <RelativeLayout
            android:padding="8dp"
            android:id="@+id/rl_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shape_border_grey"
            >
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03月07日 01:00"
                android:id="@+id/textView" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_have_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_alignParentRight="true" />

            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/rl_target"
                android:background="@drawable/shepe_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:drawablePadding="8dp"
                    android:drawableLeft="@mipmap/ic_location_yellow"
                    android:layout_margin="4dp"
                    android:id="@+id/tv_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地:"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_all"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/rl_target"
                android:background="@drawable/shepe_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="8dp"
                    android:drawableLeft="@mipmap/ic_location_blue"
                    android:layout_margin="4dp"
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发地:"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_ordernum"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/rl_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号:"
                />
            <TextView
                android:id="@+id/tv_ordertype"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/rl_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>